{
    "manifest_version": 2,
    "name": "fuck-all",
    "version": "1.0",
    "browser_action": {
        "default_popup" : "popup.html"
    },
    "permissions": 
        [
        "activeTab",
        "tabs",
        "http://localhost/*",
        "storage",
        "contextMenus"
        ],
        
    "background": {
        "scripts": ["background.js"],
        "persistent" : false
    },
    "commands": {
        "Add-Word" : {
            "suggested_key" : {
                "default" : "Ctrl+Shift+A"
            },
            "description" : "Add Word"
        },
        "Select-Word" : {
            "suggested_key" : {
                "default" : "Ctrl+Shift+S"
            },
            "description" : "select Word"
        },
        "Define-Word" : {
            "suggested_key" : {
                "default" : "Ctrl+Shift+D"
            },
            "description" : "Define Word"
        }
    },
    "content_scripts": [
    {
    "matches": [
    "<all_urls>"
    
    ],
        "js": ["content_script.js"]
    }],
    "web_accessible_resources":[
        "canvas.html",
        "frame.css"
      ]
}
